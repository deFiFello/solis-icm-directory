                <FilterButton 
                  label="Lending" 
                  active={yieldFilter === 'lending'} 
                  onClick={() => setYieldFilter('lending')}
                  hint={FILTER_HINTS.lending}
                />
                <FilterButton 
                  label="LP" 
                  active={yieldFilter === 'lp'} 
                  onClick={() => setYieldFilter('lp')}
                  hint={FILTER_HINTS.lp}
                />
                <FilterButton 
                  label="Staking" 
                  active={yieldFilter === 'staking'} 
                  onClick={() => setYieldFilter('staking')}
                  hint={FILTER_HINTS.staking}
                />
              </div>

              <div className="border border-slate-800 rounded overflow-hidden bg-black/50">
                <div className="grid grid-cols-12 gap-2 px-4 py-3 bg-slate-900/50 border-b border-slate-800 text-xs text-slate-500 tracking-widest uppercase">
                  <div className="col-span-4">Protocol</div>
                  <div className="col-span-2 text-right">APY</div>
                  <div className="col-span-2 text-right">TVL</div>
                  <div className="col-span-2 text-right">IL Risk</div>
                  <div className="col-span-2 text-right">Audit</div>
                </div>
                
                {filteredYield.map((opp, i) => (
                  <a 
                    key={i} 
                    href={opp.link} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    className="grid grid-cols-12 gap-2 px-4 py-4 border-b border-slate-800/50 last:border-b-0 hover:bg-slate-800/30 transition-all duration-200 items-center group"
                  >
                    <div className="col-span-4">
                      <div className="text-white font-bold text-sm group-hover:text-slate-100 transition-colors">{opp.protocol}</div>
                      <div className="text-slate-600 text-xs">{opp.asset}</div>
                    </div>
                    <div className="col-span-2 text-right">
                      <span className="text-white font-bold group-hover:text-green-400 transition-colors">{opp.apy}</span>
                    </div>
                    <div className="col-span-2 text-right text-slate-400 text-sm">{opp.tvl}</div>
                    <div className="col-span-2 text-right">
                      <span className={`text-xs px-2 py-0.5 rounded transition-all ${
                        opp.ilRisk === 'None' ? 'text-green-400 bg-green-400/10 group-hover:bg-green-400/20' :
                        opp.ilRisk === 'Low' ? 'text-slate-400 bg-slate-400/10 group-hover:bg-slate-400/20' :
                        'text-yellow-400 bg-yellow-400/10 group-hover:bg-yellow-400/20'
                      }`}>
                        {opp.ilRisk}
                      </span>
                    </div>
                    <div className="col-span-2 text-right text-slate-500 text-xs flex items-center justify-end gap-1">
                      {opp.auditor}
                      <span className="opacity-0 group-hover:opacity-100 transition-opacity">↗</span>
                    </div>
                  </a>
                ))}
              </div>

              <div className="mt-4 flex items-center gap-4 text-xs text-slate-600">
                <span className="flex items-center gap-1.5">
                  <span className="w-2 h-2 rounded-full bg-green-400/50" />
                  No IL Risk
                </span>
                <span className="flex items-center gap-1.5">
                  <span className="w-2 h-2 rounded-full bg-yellow-400/50" />
                  IL Exposure
                </span>
              </div>

              <div className="mt-6 p-4 border border-dashed border-slate-700 rounded text-center hover:border-slate-600 transition-colors">
                <p className="text-slate-500 text-sm mb-3">Need BTC on Solana?</p>
                <button 
                  onClick={() => setActiveTab("swap")} 
                  className="group relative px-4 py-2 bg-white text-black rounded text-sm font-bold tracking-wider uppercase hover:bg-slate-100 transition-all btn-press"
                >
                  <span className="relative z-10">Swap Now →</span>
                  <div className="absolute inset-0 bg-white blur-sm opacity-50 group-hover:opacity-75 transition-opacity rounded" />
                </button>
              </div>
            </div>

            <div className="lg:pt-14">
              <div className="mb-6">
                <p className="text-slate-500 text-xs tracking-widest uppercase mb-2">Bitcoin DeFi on Solana</p>
                <h1 className="text-2xl font-bold tracking-wide text-white">Earn Yield on Your BTC</h1>
              </div>

              <div className="divider-gradient mb-6" />

              <div className="space-y-5 stagger-in">
                <p className="text-slate-400 text-sm leading-relaxed">
                  Most BTC sits idle earning <span className="text-white">0%</span>. Even conservative 
                  yields compound significantly over time.
                </p>

                <YieldCalculator />

                <Link href="/docs#yield" className="text-slate-500 hover:text-white text-xs tracking-wider uppercase transition-colors inline-flex items-center gap-1 group">
                  Understand yield strategies <span className="group-hover:translate-x-0.5 transition-transform">→</span>
                </Link>
                
                <p className="text-slate-700 text-xs">We earn referral fees from protocols. Your rates stay the same.</p>
              </div>
            </div>
          </div>
        </div>
      )}

      <footer className="relative z-20 border-t border-slate-800/50 px-8 py-6">
        <div className="max-w-6xl mx-auto flex justify-between items-center text-xs text-slate-700">
          <span className="tracking-wider uppercase">Powered by Jupiter</span>
          <div className="flex gap-6">
            <Link href="/docs" className="hover:text-slate-400 transition-colors tracking-wider uppercase">Docs</Link>
            <a href="https://solscan.io" target="_blank" rel="noopener noreferrer" className="hover:text-slate-400 transition-colors tracking-wider uppercase">Solscan</a>
          </div>
        </div>
      </footer>
    </main>
  );
}
