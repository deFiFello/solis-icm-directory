    console.log("[Solis] Fetching live prices...");
    
    try {
      setPricesLoading(true);
      
      const btcRes = await fetch(
        'https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd&include_24hr_change=true'
      );
      
      if (!btcRes.ok) {
        throw new Error(`CoinGecko failed: ${btcRes.status}`);
      }
      
      const btcData = await btcRes.json();
      console.log("[Solis] BTC price:", btcData.bitcoin?.usd);
      
      const btcPrice = btcData.bitcoin?.usd || 94000;
      const btcChange = btcData.bitcoin?.usd_24h_change || 0;
      
      const mints = BTC_ASSETS.map(a => a.mint).join(',');
      const jupRes = await fetch(`https://api.jup.ag/price/v2?ids=${mints}`);
      
      if (!jupRes.ok) {
        throw new Error(`Jupiter failed: ${jupRes.status}`);
      }
      
      const jupData = await jupRes.json();
      console.log("[Solis] Jupiter data:", Object.keys(jupData.data || {}));
      
      const updated = BTC_ASSETS.map(asset => {
        const priceInfo = jupData.data?.[asset.mint];
        const price = priceInfo?.price ? parseFloat(priceInfo.price) : null;
        
        return {
          ...asset,
          price: price || btcPrice * (0.998 + Math.random() * 0.004),
          change24h: btcChange,
        };
      });
      
      console.log("[Solis] Prices updated:", updated.map(a => `${a.symbol}: $${a.price.toFixed(0)}`).join(', '));
